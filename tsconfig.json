{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./dist/esm",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
